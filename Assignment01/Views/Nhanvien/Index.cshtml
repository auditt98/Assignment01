
@{

    ViewData["Title"] = "Hello";
    var thongTinNhanVien = ViewData["thongTinNhanVien"] as NhanVien;
}


    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            @{ 
                Html.RenderPartial("PartialNavBar");
            }
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav">
                    <div class="text-center">
                        <h4>   Xin chào, @thongTinNhanVien.Username</h4>
                    </div>
                    <ul class="nav" id="side-menu">
                        <li class="active">
                            <a class="active" href="#"><i class="fas fa-info-circle"></i> Xem thông tin cá nhân</a>
                        </li>
                        <li>
                            <a href="/Nhanvien/@thongTinNhanVien.Id/Nvcungphong"><i class="fa fa-table fa-fw"></i> Danh sách nhân viên cùng phòng</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Thông tin cá nhân</h1>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6"><h4>Họ tên: @thongTinNhanVien.Hoten</h4></div>
                <div class="col-md-6"><h4>Phòng ban: @thongTinNhanVien.Tenpban</h4></div>
                <div class="col-md-6"><h4>Ngày sinh: @thongTinNhanVien.Ns</h4></div>
                <div class="col-md-6"><h4>Chức vụ: @thongTinNhanVien.Tencv</h4></div>
                <div class="col-md-6"><h4>Giới tính: @thongTinNhanVien.Gt</h4></div>
                <div class="col-md-6"><h4>Quê quán: @thongTinNhanVien.Tentinh</h4></div>
                <div class="col-md-6"><h4>Mã nhân viên: @thongTinNhanVien.Id</h4></div>
                <div class="col-md-6"><h4>Email: @thongTinNhanVien.Email</h4></div>
                <div class="col-md-6"><h4>Số điện thoại: @thongTinNhanVien.Sdt</h4></div>
                <div class="col-md-6"><h4>Ngày vào làm: @thongTinNhanVien.Ngayvaolam</h4></div>
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>
    



