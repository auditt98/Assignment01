
@{
    var thongTinNhanVien = ViewData["thongTinNhanVien"] as NhanVien;
    var danhSachNhanVien = ViewData["danhSachNhanVien"] as List<NhanVien>;
    ViewData["Title"] = "Thêm nhân viên";

}

@{
    Html.RenderPartial("Nav");
}

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh sách nhân viên</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table style="width: 100%;" class="table table-striped table-bordered table-hover" id="table_id">
                            <thead>
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Ngày sinh</th>
                                    <th>Giới tính</th>
                                    <th>Phòng ban</th>
                                    <th>Chức vụ</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var nv in danhSachNhanVien)
                                    {
                                        <tr>
                                            <td>@nv.Hoten</td>
                                            <td>@nv.Ns</td>
                                            <td>@nv.Gt</td>
                                            <td>@nv.Tenpban</td>
                                            <td>@nv.Tencv</td>
                                            <td>
                                                <a class="btn btn-success" href="/Nhanvien/Chitiet/@nv.Id">Xem chi tiết</a>
                                                <a class="btn btn-info" href="#">Sửa</a>
                                                <a class="btn btn-danger" href="#">Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>


    </div>


@section Scripts{
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        });

    </script>

}