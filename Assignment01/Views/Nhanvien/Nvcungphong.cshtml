
@{
    var thongTinNhanVien = ViewData["thongTinNhanVien"] as NhanVien;
    ViewData["Title"] = "Nhân viên cùng phòng";
}
<script>



</script>

<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    @{
        Html.RenderPartial("PartialNavBar");
    }
    <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav">
            <div class="text-center">
                <h4>   Xin chào, @thongTinNhanVien.Username</h4>
            </div>
            <ul class="nav" id="side-menu">
                <li>
                    <a class="" href="/Nhanvien/Index/@thongTinNhanVien.Id"><i class="fas fa-info-circle"></i> Xem thông tin cá nhân</a>
                </li>
                <li>
                    <a href="/Nhanvien/@thongTinNhanVien.Id/Nvcungphong" class="active"><i class="fa fa-table fa-fw"></i> Danh sách nhân viên cùng phòng</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách nhân viên cùng phòng</h1>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table style="width: 100%;" class="table table-striped table-bordered table-hover" id="table_id">
                        <thead>
                            <tr>
                                <th>Họ tên</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th>Phòng ban</th>
                                <th>Chức vụ</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                foreach(var nv in thongTinNhanVien.nhanVienCungPhong)
                                {
                                    <tr>
                                        <td>@nv.Hoten</td>
                                        <td>@nv.Ns</td>
                                        <td>@nv.Gt</td>
                                        <td>@nv.Tenpban</td>
                                        <td>@nv.Tencv</td>
                                        <td><a class="btn btn-default" href="/Nhanvien/@thongTinNhanVien.Id/Nvcungphong/@nv.Id">Xem chi tiết</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        });

    </script>

}