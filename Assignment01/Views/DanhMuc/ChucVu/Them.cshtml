
@{
    var thongTinNhanVien = ViewData["thongTinNhanVien"] as NhanVien;
    var newIdcv = ViewData["newIdcv"];
    ViewData["Title"] = "Thêm chức vụ";
    Console.WriteLine(ViewData["newIdcv"]);
}

@{
    Html.RenderPartial("Nav");
}



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thêm chức vụ</h1>
        </div>
    </div>
    <form class="form-horizontal" method="post" action="/DanhMuc/ChucVu/Them">
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Mã chức vụ:</label>
            <div class="col-sm-6">
                <input class="form-control" value="@newIdcv.ToString()" disabled/>
            </div>
        </div>
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Tên chức vụ <span style="color:red">(*)</span>:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="newCvName" id="inputName" placeholder="Nhập tên chức vụ" required>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8" style="text-align: center;">
                <button class="btn btn-success" type="submit">Lưu</button>
                <a class="btn btn-danger" href="/DanhMuc/ChucVu">Hủy</a>
            </div>
        </div>
    </form>

</div>