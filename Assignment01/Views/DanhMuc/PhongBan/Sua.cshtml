
@{
    var thongTinNhanVien = ViewData["thongTinNhanVien"] as NhanVien;
    var thongTinPhongBan = ViewData["thongTinPhongBan"] as PhongBan;
    ViewData["Title"] = "Sửa phòng ban";
}

@{
    Html.RenderPartial("Nav");
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sửa phòng ban</h1>
        </div>
    </div>
    <form class="form-horizontal" method="post" action="/DanhMuc/PhongBan/@thongTinPhongBan.Idpban/Sua">
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Mã phòng ban:</label>
            <div class="col-sm-6">
                <input class="form-control" value="@thongTinPhongBan.Idpban.ToString()" disabled />
            </div>
        </div>
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Tên phòng ban <span style="color:red">(*)</span>:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="editPbName" id="inputName" value="@thongTinPhongBan.Tenpban" placeholder="Nhập tên phòng ban" required>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8" style="text-align: center;">
                <button class="btn btn-success" type="submit">Lưu</button>
                <a class="btn btn-danger" href="/DanhMuc/PhongBan">Hủy</a>
            </div>
        </div>
    </form>

</div>