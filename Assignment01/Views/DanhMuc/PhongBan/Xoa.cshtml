
@{
    var thongTinNhanVien = ViewData["thongTinNhanVien"] as NhanVien;
    var thongTinPhongBan = ViewData["thongTinPhongBan"] as PhongBan;
    ViewData["Title"] = "Xóa phòng ban";
}

@{
    Html.RenderPartial("Nav");
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Bạn muốn xóa phòng ban này</h1>
        </div>
    </div>
    <form class="form-horizontal" method="post" action="/DanhMuc/PhongBan/@thongTinPhongBan.Idpban/Xoa">
        <div class="form-group">
            <label for="inputId" class="col-sm-2 control-label">Mã phòng ban:</label>
            <div class="col-sm-6">
                <input class="form-control" id="inputId" value="@thongTinPhongBan.Idpban.ToString()" disabled />
                <input type="hidden" name="deletePbId" value="@thongTinPhongBan.Idpban.ToString()" />
            </div>
        </div>
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Tên phòng ban <span style="color:red">(*)</span>:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="inputName" value="@thongTinPhongBan.Tenpban" disabled>
                <input type="hidden" name="deletePbName" value="@thongTinPhongBan.Tenpban">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8" style="text-align: center;">
                <button class="btn btn-danger" type="submit">Xóa</button>
                <a class="btn btn-info" href="/DanhMuc/PhongBan">Hủy</a>
            </div>
        </div>
    </form>

</div>