
@{
    var thongTinNhanVien = ViewData["thongTinNhanVien"] as NhanVien;
    var danhMucTinhThanh = ViewData["DanhMucTinhThanh"] as List<TinhThanh>;
    ViewData["Title"] = "Danh mục tỉnh thành";
}

@{
    Html.RenderPartial("Nav");
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh mục tỉnh thành</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row" style="margin-bottom: 10px;">
                <div class="col-md-10"></div>
                <div class="col-md-2">
                    <a href="/DanhMuc/TinhThanh/Them" class="btn btn-info">Thêm tỉnh thành</a>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <table style="width: 100%;" class="table table-striped table-bordered table-hover" id="table_id">
                        <thead>
                            <tr>
                                <th>Mã tỉnh thành</th>
                                <th>Tỉnh thành</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var tt in danhMucTinhThanh)
                                {
                                    <tr>
                                        <td>@tt.Idtinh</td>
                                        <td>@tt.Tentinh</td>
                                        <td>
                                            <a class="btn btn-info" href="/DanhMuc/TinhThanh/@tt.Idtinh/Sua">Sửa</a>
                                            <a class="btn btn-danger" href="/DanhMuc/TinhThanh/@tt.Idtinh/Xoa">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>

@section Scripts{
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable({
                  "language": {
                    "zeroRecords": "Không tìm được thông tin liên quan."
                  }
            });
        });
    </script>

}