
@{
    var thongTinNhanVien = ViewData["thongTinNhanVien"] as NhanVien;
    var thongTinTinhThanh = ViewData["thongTinTinhThanh"] as TinhThanh;
    ViewData["Title"] = "Xóa tỉnh thành";
}

@{
    Html.RenderPartial("Nav");
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Bạn muốn xóa tỉnh thành này</h1>
        </div>
    </div>
    <form class="form-horizontal" method="post" action="/DanhMuc/TinhThanh/@thongTinTinhThanh.Idtinh/Xoa">
        <div class="form-group">
            <label for="inputId" class="col-sm-2 control-label">Mã tỉnh thành:</label>
            <div class="col-sm-6">
                <input class="form-control" id="inputId" value="@thongTinTinhThanh.Idtinh.ToString()" disabled />
                <input type="hidden" name="deleteTtId" value="@thongTinTinhThanh.Idtinh.ToString()" />
            </div>
        </div>
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Tên tỉnh thành <span style="color:red">(*)</span>:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="inputName" value="@thongTinTinhThanh.Tentinh" disabled>
                <input type="hidden" name="deleteTtName" value="@thongTinTinhThanh.Tentinh">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8" style="text-align: center;">
                <button class="btn btn-danger" type="submit">Xóa</button>
                <a class="btn btn-info" href="/DanhMuc/TinhThanh">Hủy</a>
            </div>
        </div>
    </form>

</div>