
@{
    var thongTinNhanVien = ViewData["thongTinNhanVien"] as NhanVien;
    var thongTinTinhThanh = ViewData["thongTinTinhThanh"] as TinhThanh;
    ViewData["Title"] = "Sửa tỉnh thành";
}

@{
    Html.RenderPartial("Nav");
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sửa tỉnh thành</h1>
        </div>
    </div>
    <form class="form-horizontal" method="post" action="/DanhMuc/TinhThanh/@thongTinTinhThanh.Idtinh/Sua">
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Mã tỉnh thành:</label>
            <div class="col-sm-6">
                <input class="form-control" value="@thongTinTinhThanh.Idtinh.ToString()" disabled />
            </div>
        </div>
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Tên tỉnh thành <span style="color:red">(*)</span>:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="editTtName" id="inputName" value="@thongTinTinhThanh.Tentinh" placeholder="Nhập tên tỉnh thành" required>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8" style="text-align: center;">
                <button class="btn btn-success" type="submit">Lưu</button>
                <a class="btn btn-danger" href="/DanhMuc/TinhThanh">Hủy</a>
            </div>
        </div>
    </form>

</div>